<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:textAlignment="textEnd">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#E7E5EA"
        app:cardCornerRadius="6dp"
        app:contentPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewPlantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Iceland Poppy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPlantType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Annual" />

                <TextView
                    android:id="@+id/textViewPlantHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    tools:text="60 cm" />

                <TextView
                    android:id="@+id/textViewPlantLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    tools:text="Full Sun" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageViewJan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewFeb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewMar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewApr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewMay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewJun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewJul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewAug"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewSep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewOct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewNov"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />

                        <ImageView
                            android:id="@+id/imageViewDec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/out_of_bloom" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textViewJan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jan"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewFeb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Feb"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewMar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mar"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewApr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Apr"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewMay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="May"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewJun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jun"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewJul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jul"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewAug"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Aug"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewSep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sep"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewOct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Oct"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewNov"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nov"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textViewDec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dec"
                            android:textAlignment="center" />
                    </TableRow>

                </TableLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>